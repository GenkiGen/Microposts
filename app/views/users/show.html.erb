<section class="hero is-light">
<!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <a class="navbar-item">
            Microposts
          </a>
          <span class="navbar-burger burger" data-target="navbarMenuHeroA">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>
        <div id="navbarMenuHeroA" class="navbar-menu">
          <div class="navbar-end">
            <%= link_to 'Home', root_path, class: 'navbar-item' %>
          </div>
        </div>
      </div>
    </nav>
  </div>

  <div class="hero-body">
      <div class="columns">
        <div class="column is-one-fifth has-text-right">
          <%= avatar @user, size: 256 %>
        </div>

        <div class="column is-four-fifths">
          <h1 class="title is-2"><%= @user.username %></h1>
          <p class="heading">Email</p>
          <p style="margin-bottom: 8px"><%= @user.email %></p>

          <p class="heading">Joined</p>
          <p style="margin-bottom: 8px"><%= @user.created_at.strftime("%d/%m/%y") %></p>

          <p class="heading">Posts created</p>
          <p style="margin-bottom: 8px"><%= @user.posts.count %></p>
        </div>
      </div>
  </div>
</section>


